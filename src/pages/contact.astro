    <div class="grid grid-cols-1 md:grid-cols-2 rounded gap-4 md:gap-8">
      <div class="space-y-8">
        <div>
          <a
            href="/materials"
            class="bg-gray-800 text-white hover:bg-gray-500 transition-colors px-6 py-2 rounded"
